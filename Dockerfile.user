FROM golang:1.21-alpine AS builder

WORKDIR /app

# Install build dependencies for CGO and SQLite
RUN apk add --no-cache gcc musl-dev sqlite-dev

# Copy go mod files
COPY go-user-service/go.mod go-user-service/go.sum ./
RUN go mod download

# Copy source code
COPY go-user-service/ .

# Build the application with CGO enabled
RUN CGO_ENABLED=1 GOOS=linux go build -a -ldflags '-linkmode external -extldflags "-static"' -o user-service cmd/server/main.go

# Final stage
FROM alpine:latest

WORKDIR /app

# Install SQLite dependencies and wget for healthcheck
RUN apk --no-cache add ca-certificates sqlite-libs wget

# Copy binary from builder
COPY --from=builder /app/user-service .

# Expose the service port
EXPOSE 7000

# Run the service
CMD ["./user-service", "--port=7000", "--debug=true"]
